                    <li>
                        <a href="/ProductPage/Product" class="dropdown-toggle no-arrow">
                            <span class="micon dw dw-list3"></span><span class="mtext">Product</span>
                        </a>
                    </li> 
                    
                    @*@if (User.IsInRole(RoleConstant.ADMIN))
